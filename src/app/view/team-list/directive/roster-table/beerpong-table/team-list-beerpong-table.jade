//------------------------------------------------------------------------------
//- Subview of the beerpong roster.
//------------------------------------------------------------------------------

div

  table(
    at-table
    list = "currentRosterModel.list"
  )
    thead
      th(
        attribute = "active"
      )
        i.fa.fa-bolt
    tbody
      tr(
        ng-click = "toggleSelectPlayer({player: item})"
        ng-class = "{'selected-row' : item.selected == true}"
      )
        td(
          attribute = "active"
        )
          div(
            ng-show = "item.active == true"
          )
            i.fa.fa-check
          div(
            ng-show = "item.active == false"
          )
            i.icon-spacer
        td(
          at-implicit
          attribute = "name"
        )
        td(
          at-implicit
          attribute = "wins"
        )
        td(
          at-implicit
          attribute = "losses"
        )
        td(
          at-implicit
          title     = "Handedness"
          attribute = "hand"
        )
        td(
          at-implicit
          attribute = "position"
        )