.toast-list
  position fixed
  z-index  10
  right    20px
  bottom   20px

.toast
  width            320px
  padding          20px
  margin-top       10px
  background-color rgba(250, 250, 250, .8)

  &.ng-enter
    transition .2s linear all
    opacity    0
 
  &.ng-enter.ng-enter-active
    opacity 1

  &.ng-leave
    transition .2s linear all
    opacity    1
    
  &.ng-leave-active
    opacity  0